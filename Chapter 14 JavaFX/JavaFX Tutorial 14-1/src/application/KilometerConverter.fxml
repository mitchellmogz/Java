<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.KilometerConverterController">
   <children>
      <AnchorPane prefHeight="135.0" prefWidth="280.0">
         <children>
            <Label fx:id="promptLabel" layoutX="14.0" layoutY="14.0" text="Enter the distance in kilometers:" />
            <TextField fx:id="kilometerTextField" layoutX="190.0" layoutY="10.0" prefHeight="25.0" prefWidth="76.0" />
            <Label fx:id="outputLabel" layoutX="14.0" layoutY="59.0" prefHeight="17.0" prefWidth="252.0" />
            <Button fx:id="convertButton" layoutX="90.0" layoutY="96.0" mnemonicParsing="false" onAction="#convertButtonListener" text="Convert to Miles" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
